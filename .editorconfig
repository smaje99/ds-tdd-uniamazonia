root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 120

# Java
[*.java]
indent_size = 2
continuation_indent_size = 4

# Kotlin (si algún día lo agregan)
[*.kt]
indent_size = 2
continuation_indent_size = 4

# XML (pom.xml, configs)
[*.xml]
indent_size = 2

# Gradle
[*.gradle]
indent_size = 2
[*.gradle.kts]
indent_size = 2

# YAML / JSON
[*.yml]
indent_size = 2
[*.yaml]
indent_size = 2
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 0

# Shell scripts
[*.sh]
indent_size = 2

# Properties (application.properties, gradle.properties)
[*.properties]
indent_style = space
indent_size = 2

# Makefiles requieren tabs
[Makefile]
indent_style = tab